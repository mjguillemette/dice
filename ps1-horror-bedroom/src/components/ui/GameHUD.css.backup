.game-hud {
  position: fixed;
  top: 20px;
  right: 20px;
  display: flex;
  flex-direction: column;
  gap: 16px;
  z-index: 100;
  pointer-events: none;
}

/* ===== HUD PANELS ===== */
.hud-panel {
  background: rgba(15, 15, 20, 0.92);
  backdrop-filter: blur(12px);
  border-radius: 12px;
  border: 1px solid rgba(255, 255, 255, 0.1);
  box-shadow: 0 8px 32px rgba(0, 0, 0, 0.4),
              0 0 0 1px rgba(255, 255, 255, 0.05) inset;
  overflow: hidden;
  pointer-events: auto;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.hud-panel:hover {
  border-color: rgba(255, 255, 255, 0.15);
  box-shadow: 0 12px 48px rgba(0, 0, 0, 0.5),
              0 0 0 1px rgba(255, 255, 255, 0.08) inset;
}

/* ===== SCORES PANEL ===== */
.hud-scores {
  width: 320px;
  max-height: 80vh;
  display: flex;
  flex-direction: column;
}

.hud-header {
  padding: 16px 20px 12px;
  border-bottom: 1px solid rgba(255, 255, 255, 0.08);
  background: linear-gradient(180deg, rgba(255, 255, 255, 0.03) 0%, transparent 100%);
}

.hud-title {
  margin: 0 0 8px 0;
  font-size: 14px;
  font-weight: 700;
  letter-spacing: 1.5px;
  color: rgba(255, 255, 255, 0.9);
  text-shadow: 0 2px 8px rgba(0, 0, 0, 0.3);
}

/* Progress Indicator */
.progress-indicator {
  display: flex;
  align-items: center;
  gap: 10px;
}

.progress-bar {
  flex: 1;
  height: 6px;
  background: rgba(255, 255, 255, 0.08);
  border-radius: 3px;
  overflow: hidden;
  position: relative;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #4CAF50, #66BB6A);
  border-radius: 3px;
  transition: width 0.6s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  box-shadow: 0 0 12px rgba(76, 175, 80, 0.4);
}

.progress-fill::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(90deg, 
    transparent, 
    rgba(255, 255, 255, 0.3), 
    transparent
  );
  animation: shimmer 2s infinite;
}

@keyframes shimmer {
  0% { transform: translateX(-100%); }
  100% { transform: translateX(100%); }
}

.progress-text {
  font-size: 12px;
  font-weight: 600;
  color: rgba(255, 255, 255, 0.6);
  min-width: 35px;
  text-align: right;
}

/* ===== DAILY TARGET ===== */
.daily-target {
  margin-top: 12px;
  padding: 10px 12px;
  background: rgba(255, 255, 255, 0.03);
  border-radius: 6px;
  border: 1px solid rgba(255, 255, 255, 0.08);
}

.target-label {
  font-size: 10px;
  font-weight: 600;
  letter-spacing: 1px;
  text-transform: uppercase;
  color: rgba(255, 255, 255, 0.5);
  margin-bottom: 6px;
}

.target-values {
  display: flex;
  align-items: baseline;
  gap: 6px;
  font-size: 20px;
  font-weight: 700;
}

.target-current {
  color: rgba(255, 165, 0, 0.9);
  transition: all 0.3s ease;
}

.target-current.target-met {
  color: #4CAF50;
  text-shadow: 0 0 8px rgba(76, 175, 80, 0.4);
}

.target-separator {
  color: rgba(255, 255, 255, 0.3);
  font-weight: 400;
}

.target-goal {
  color: rgba(255, 255, 255, 0.6);
}

/* ===== CORRUPTION METER ===== */
.corruption-meter {
  margin-top: 12px;
  padding: 10px 12px;
  background: rgba(139, 0, 0, 0.1);
  border-radius: 6px;
  border: 1px solid rgba(255, 0, 0, 0.2);
}

.corruption-label {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 10px;
  font-weight: 600;
  letter-spacing: 1px;
  text-transform: uppercase;
  color: rgba(255, 100, 100, 0.8);
  margin-bottom: 6px;
}

.corruption-percent {
  font-size: 11px;
  font-weight: 700;
  color: rgba(255, 50, 50, 1);
}

.corruption-bar {
  height: 8px;
  background: rgba(255, 255, 255, 0.05);
  border-radius: 4px;
  overflow: hidden;
  position: relative;
}

.corruption-fill {
  height: 100%;
  background: linear-gradient(90deg, #8B0000, #DC143C, #FF0000);
  border-radius: 4px;
  transition: width 0.6s cubic-bezier(0.4, 0, 0.2, 1);
  box-shadow: 0 0 16px rgba(255, 0, 0, 0.6);
  position: relative;
}

.corruption-fill::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(90deg,
    transparent,
    rgba(255, 255, 255, 0.3),
    transparent
  );
  animation: shimmer 2s infinite;
}

/* ===== SCORE ITEMS ===== */
.hud-body {
  padding: 8px 12px;
  overflow-y: auto;
  flex: 1;
  scrollbar-width: thin;
  scrollbar-color: rgba(255, 255, 255, 0.2) transparent;
}

.hud-body::-webkit-scrollbar {
  width: 6px;
}

.hud-body::-webkit-scrollbar-track {
  background: transparent;
}

.hud-body::-webkit-scrollbar-thumb {
  background: rgba(255, 255, 255, 0.2);
  border-radius: 3px;
}

.hud-body::-webkit-scrollbar-thumb:hover {
  background: rgba(255, 255, 255, 0.3);
}

.score-item {
  margin: 6px 0;
  padding: 12px 14px;
  border-radius: 8px;
  background: rgba(255, 255, 255, 0.03);
  border: 1px solid transparent;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.score-item.locked {
  opacity: 0.5;
}

.score-item.achieved {
  background: linear-gradient(135deg, rgba(76, 175, 80, 0.12), rgba(76, 175, 80, 0.05));
  border-color: rgba(76, 175, 80, 0.25);
}

.score-item.achieved:hover {
  background: linear-gradient(135deg, rgba(76, 175, 80, 0.18), rgba(76, 175, 80, 0.08));
  border-color: rgba(76, 175, 80, 0.4);
  transform: translateX(-2px);
}

.score-item.newly-achieved {
  animation: achievementPop 0.6s cubic-bezier(0.34, 1.56, 0.64, 1);
  border-color: rgba(76, 175, 80, 0.6);
  box-shadow: 0 0 20px rgba(76, 175, 80, 0.3);
}

@keyframes achievementPop {
  0% {
    transform: scale(0.95);
    opacity: 0;
  }
  50% {
    transform: scale(1.03);
  }
  100% {
    transform: scale(1);
    opacity: 1;
  }
}

/* Highlight when dice is hovered in 3D - CURRENT THROW (bold/primary) */
.score-item.highlighted-by-dice {
  background: linear-gradient(135deg, rgba(255, 215, 0, 0.2), rgba(255, 215, 0, 0.1)) !important;
  border-color: rgba(255, 215, 0, 0.6) !important;
  box-shadow: 0 0 20px rgba(255, 215, 0, 0.4);
  transform: translateX(-4px);
  transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
}

/* Highlight when dice is hovered in 3D - PREVIOUS ROUND (subtle) */
.score-item.highlighted-by-dice-subtle {
  background: linear-gradient(135deg, rgba(255, 215, 0, 0.08), rgba(255, 215, 0, 0.04)) !important;
  border-color: rgba(255, 215, 0, 0.2) !important;
  box-shadow: 0 0 8px rgba(255, 215, 0, 0.15);
  transform: translateX(-2px);
  transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
}

.score-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 6px;
}

.score-name {
  font-size: 13px;
  font-weight: 600;
  color: rgba(255, 255, 255, 0.85);
  letter-spacing: 0.3px;
}

.score-points {
  font-size: 16px;
  font-weight: 700;
  color: #66BB6A;
  display: flex;
  align-items: center;
  gap: 6px;
}

.score-value {
  display: inline-block;
  animation: scoreValuePulse 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

@keyframes scoreValuePulse {
  0% { transform: scale(1.2); }
  100% { transform: scale(1); }
}

.score-sparkle {
  display: inline-block;
  animation: sparkle 0.8s ease-out;
  font-size: 14px;
}

@keyframes sparkle {
  0% {
    opacity: 0;
    transform: scale(0) rotate(0deg);
  }
  50% {
    opacity: 1;
    transform: scale(1.2) rotate(180deg);
  }
  100% {
    opacity: 0;
    transform: scale(0.8) rotate(360deg);
  }
}

/* Dice Preview */
.score-dice-preview {
  display: flex;
  gap: 6px;
  flex-wrap: wrap;
  margin-top: 4px;
}

.dice-pip {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  min-width: 24px;
  height: 24px;
  padding: 0 6px;
  background: rgba(255, 255, 255, 0.1);
  border: 1px solid rgba(255, 255, 255, 0.2);
  border-radius: 4px;
  font-size: 11px;
  font-weight: 700;
  color: rgba(255, 255, 255, 0.9);
  animation: pipFadeIn 0.3s cubic-bezier(0.4, 0, 0.2, 1) backwards;
}

@keyframes pipFadeIn {
  from {
    opacity: 0;
    transform: translateY(-4px) scale(0.8);
  }
  to {
    opacity: 1;
    transform: translateY(0) scale(1);
  }
}

/* Highlighted dice pip when hovering the die in 3D - CURRENT THROW (bold) */
.dice-pip.highlighted {
  background: linear-gradient(135deg, rgba(255, 215, 0, 0.4), rgba(255, 215, 0, 0.2));
  border-color: rgba(255, 215, 0, 0.8);
  color: #FFD700;
  box-shadow: 0 0 12px rgba(255, 215, 0, 0.6);
  transform: translateY(0) scale(1.15);
  animation: pipPulse 0.8s ease-in-out infinite;
}

@keyframes pipPulse {
  0%, 100% {
    box-shadow: 0 0 12px rgba(255, 215, 0, 0.6);
  }
  50% {
    box-shadow: 0 0 20px rgba(255, 215, 0, 0.9);
  }
}

/* Highlighted dice pip - PREVIOUS ROUND (subtle) */
.dice-pip.highlighted-subtle {
  background: linear-gradient(135deg, rgba(255, 215, 0, 0.15), rgba(255, 215, 0, 0.08));
  border-color: rgba(255, 215, 0, 0.3);
  color: rgba(255, 215, 0, 0.7);
  box-shadow: 0 0 6px rgba(255, 215, 0, 0.2);
  transform: translateY(0) scale(1.05);
}

/* ===== WALLET SECTION ===== */
.hud-footer {
  padding: 14px 20px;
  border-top: 1px solid rgba(255, 255, 255, 0.08);
  background: linear-gradient(0deg, rgba(255, 255, 255, 0.03) 0%, transparent 100%);
}

.wallet-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.wallet-label {
  font-size: 12px;
  font-weight: 600;
  color: rgba(255, 255, 255, 0.6);
  letter-spacing: 0.5px;
  text-transform: uppercase;
  display: flex;
  align-items: center;
  gap: 6px;
}

.wallet-icon {
  font-size: 14px;
  filter: drop-shadow(0 2px 4px rgba(255, 215, 0, 0.3));
}

.wallet-amount-wrapper {
  position: relative;
  display: flex;
  align-items: center;
  gap: 8px;
}

.wallet-amount {
  font-size: 18px;
  font-weight: 700;
  color: #FFD700;
  text-shadow: 0 2px 8px rgba(255, 215, 0, 0.4);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.wallet-amount.gaining {
  animation: balanceGain 0.6s cubic-bezier(0.34, 1.56, 0.64, 1);
  color: #4CAF50;
  text-shadow: 0 2px 12px rgba(76, 175, 80, 0.6);
}

@keyframes balanceGain {
  0% { transform: scale(1); }
  50% { transform: scale(1.15); }
  100% { transform: scale(1); }
}

.wallet-gain {
  position: absolute;
  right: 100%;
  margin-right: 8px;
  font-size: 14px;
  font-weight: 700;
  color: #4CAF50;
  animation: gainFloat 1.5s cubic-bezier(0.4, 0, 0.2, 1) forwards;
  pointer-events: none;
  text-shadow: 0 2px 8px rgba(76, 175, 80, 0.6);
}

@keyframes gainFloat {
  0% {
    opacity: 1;
    transform: translateY(0) scale(1);
  }
  100% {
    opacity: 0;
    transform: translateY(-20px) scale(0.8);
  }
}

/* ===== ATTEMPT PANEL ===== */
.hud-attempt {
  width: 320px;
  padding: 20px;
}

.attempt-score {
  text-align: center;
  margin-bottom: 20px;
}

.attempt-label {
  font-size: 11px;
  font-weight: 700;
  letter-spacing: 1.2px;
  color: rgba(255, 255, 255, 0.5);
  margin-bottom: 8px;
}

.attempt-value {
  font-size: 48px;
  font-weight: 700;
  color: rgba(255, 255, 255, 0.3);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  min-height: 60px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.attempt-value.settled {
  color: rgba(255, 255, 255, 0.95);
  text-shadow: 0 2px 16px rgba(255, 255, 255, 0.3);
}

.score-number {
  display: inline-block;
  animation: scoreAppear 0.4s cubic-bezier(0.34, 1.56, 0.64, 1);
}

@keyframes scoreAppear {
  0% {
    transform: scale(0.5);
    opacity: 0;
  }
  100% {
    transform: scale(1);
    opacity: 1;
  }
}

.score-placeholder {
  opacity: 0.3;
}

/* Attempt Tracker */
.attempt-tracker {
  padding-top: 16px;
  border-top: 1px solid rgba(255, 255, 255, 0.08);
}

.attempt-counter-label {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 11px;
  font-weight: 700;
  letter-spacing: 1px;
  color: rgba(255, 255, 255, 0.6);
  margin-bottom: 12px;
}

.warning-badge {
  background: linear-gradient(135deg, #ff6b6b, #ee5a52);
  color: white;
  padding: 3px 8px;
  border-radius: 4px;
  font-size: 10px;
  letter-spacing: 0.5px;
  box-shadow: 0 2px 8px rgba(255, 107, 107, 0.4);
  animation: warningPulse 2s infinite;
}

@keyframes warningPulse {
  0%, 100% { opacity: 1; }
  50% { opacity: 0.7; }
}

.attempt-dots {
  display: flex;
  gap: 10px;
  justify-content: center;
}

.attempt-dot {
  width: 16px;
  height: 16px;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.1);
  border: 2px solid rgba(255, 255, 255, 0.2);
  position: relative;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.dot-inner {
  position: absolute;
  top: 50%;
  left: 50%;
  width: 6px;
  height: 6px;
  background: transparent;
  border-radius: 50%;
  transform: translate(-50%, -50%);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.attempt-dot.used {
  background: linear-gradient(135deg, #4CAF50, #66BB6A);
  border-color: #4CAF50;
  box-shadow: 0 0 12px rgba(76, 175, 80, 0.5);
  animation: dotFill 0.4s cubic-bezier(0.34, 1.56, 0.64, 1);
}

.attempt-dot.used .dot-inner {
  background: white;
  box-shadow: 0 0 4px rgba(255, 255, 255, 0.8);
}

@keyframes dotFill {
  0% {
    transform: scale(0.5);
    opacity: 0;
  }
  50% {
    transform: scale(1.2);
  }
  100% {
    transform: scale(1);
    opacity: 1;
  }
}

.attempt-dot.critical {
  background: linear-gradient(135deg, #ff6b6b, #ee5a52);
  border-color: #ff6b6b;
  box-shadow: 0 0 16px rgba(255, 107, 107, 0.6);
  animation: criticalPulse 1.5s infinite;
}

.attempt-dot.critical .dot-inner {
  background: white;
  animation: innerPulse 1.5s infinite;
}

@keyframes criticalPulse {
  0%, 100% {
    box-shadow: 0 0 16px rgba(255, 107, 107, 0.6);
  }
  50% {
    box-shadow: 0 0 24px rgba(255, 107, 107, 0.9);
  }
}

@keyframes innerPulse {
  0%, 100% { transform: translate(-50%, -50%) scale(1); }
  50% { transform: translate(-50%, -50%) scale(1.3); }
}

/* ===== DICE TOOLTIP ===== */
.hud-dice-tooltip {
  position: fixed;
  pointer-events: none;
  z-index: 1000;
  animation: tooltipFadeIn 0.2s cubic-bezier(0.4, 0, 0.2, 1);
}

@keyframes tooltipFadeIn {
  from {
    opacity: 0;
    transform: translateY(4px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.tooltip-glow {
  position: absolute;
  top: -4px;
  left: -4px;
  right: -4px;
  bottom: -4px;
  background: radial-gradient(circle at center, rgba(100, 150, 255, 0.15), transparent 70%);
  border-radius: 12px;
  filter: blur(8px);
  z-index: -1;
}

.tooltip-content {
  background: rgba(10, 10, 15, 0.98);
  backdrop-filter: blur(16px);
  border: 1px solid rgba(255, 255, 255, 0.15);
  border-radius: 8px;
  padding: 12px 16px;
  min-width: 180px;
  box-shadow: 0 8px 32px rgba(0, 0, 0, 0.6),
              0 0 0 1px rgba(255, 255, 255, 0.05) inset;
}

.tooltip-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10px;
  padding-bottom: 8px;
  border-bottom: 1px solid rgba(255, 255, 255, 0.1);
}

.tooltip-type {
  font-size: 13px;
  font-weight: 700;
  color: rgba(255, 255, 255, 0.9);
  letter-spacing: 0.5px;
}

.tooltip-id {
  font-size: 11px;
  font-weight: 600;
  color: rgba(255, 255, 255, 0.4);
  font-family: monospace;
}

.tooltip-stats {
  display: flex;
  gap: 16px;
  margin-bottom: 8px;
}

.tooltip-stat {
  flex: 1;
  text-align: center;
}

.tooltip-divider {
  width: 1px;
  background: rgba(255, 255, 255, 0.1);
}

.stat-label {
  display: block;
  font-size: 10px;
  font-weight: 600;
  color: rgba(255, 255, 255, 0.5);
  letter-spacing: 0.5px;
  text-transform: uppercase;
  margin-bottom: 4px;
}

.stat-value {
  display: block;
  font-size: 20px;
  font-weight: 700;
  color: rgba(255, 255, 255, 0.95);
}

.stat-value.face {
  color: #64B5F6;
  text-shadow: 0 2px 8px rgba(100, 181, 246, 0.4);
}

.stat-value.score {
  color: #66BB6A;
  text-shadow: 0 2px 8px rgba(102, 187, 106, 0.4);
}

.tooltip-modifiers {
  display: flex;
  flex-wrap: wrap;
  gap: 6px;
  padding-top: 8px;
  border-top: 1px solid rgba(255, 255, 255, 0.1);
}

.modifier-badge {
  display: inline-block;
  padding: 4px 8px;
  background: linear-gradient(135deg, rgba(156, 39, 176, 0.2), rgba(123, 31, 162, 0.15));
  border: 1px solid rgba(156, 39, 176, 0.3);
  border-radius: 4px;
  font-size: 10px;
  font-weight: 600;
  color: #CE93D8;
  letter-spacing: 0.3px;
  text-transform: uppercase;
  animation: modifierFadeIn 0.3s cubic-bezier(0.4, 0, 0.2, 1) backwards;
}

.modifier-count {
  margin-left: 4px;
  font-weight: 700;
  color: #E1BEE7;
  text-shadow: 0 0 8px rgba(225, 190, 231, 0.4);
}

@keyframes modifierFadeIn {
  from {
    opacity: 0;
    transform: scale(0.8);
  }
  to {
    opacity: 1;
    transform: scale(1);
  }
}

/* ===== RESPONSIVE ADJUSTMENTS ===== */
@media (max-height: 800px) {
  .hud-scores {
    max-height: 60vh;
  }
}

@media (max-width: 768px) {
  .game-hud {
    top: 10px;
    right: 10px;
    gap: 12px;
  }

  .hud-scores,
  .hud-attempt {
    width: 280px;
  }

  .attempt-value {
    font-size: 40px;
    min-height: 50px;
  }
}